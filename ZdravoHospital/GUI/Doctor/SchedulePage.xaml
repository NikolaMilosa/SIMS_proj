                        <TextBlock Text="05:00"
                           TextAlignment="Center"
                               Foreground="White"
                               FontSize="20"
                               Height="238"/>
                        <Border BorderBrush="Black"
                            BorderThickness="0, 2, 0, 0"/>
                        <TextBlock Text="06:00"
                           TextAlignment="Center"
                               Foreground="White"
                               FontSize="20"
                               Height="238"/>
                        <Border BorderBrush="Black"
                            BorderThickness="0, 2, 0, 0"/>
                        <TextBlock Text="07:00"
                           TextAlignment="Center"
                               Foreground="White"
                               FontSize="20"
                               Height="238"/>
                        <Border BorderBrush="Black"
                            BorderThickness="0, 2, 0, 0"/>
                        <TextBlock Text="08:00"
                           TextAlignment="Center"
                               Foreground="White"
                               FontSize="20"
                               Height="238"/>
                        <Border BorderBrush="Black"
                            BorderThickness="0, 2, 0, 0"/>
                        <TextBlock Text="09:00"
                           TextAlignment="Center"
                               Foreground="White"
                               FontSize="20"
                               Height="238"/>
                        <Border BorderBrush="Black"
                            BorderThickness="0, 2, 0, 0"/>
                        <TextBlock Text="10:00"
                           TextAlignment="Center"
                               Foreground="White"
                               FontSize="20"
                               Height="238"/>
                        <Border BorderBrush="Black"
                            BorderThickness="0, 2, 0, 0"/>
                        <TextBlock Text="11:00"
                           TextAlignment="Center"
                               Foreground="White"
                               FontSize="20"
                               Height="238"/>
                        <Border BorderBrush="Black"
                            BorderThickness="0, 2, 0, 0"/>
                        <TextBlock Text="12:00"
                           TextAlignment="Center"
                               Foreground="White"
                               FontSize="20"
                               Height="238"/>
                        <Border BorderBrush="Black"
                            BorderThickness="0, 2, 0, 0"/>
                        <TextBlock Text="13:00"
                           TextAlignment="Center"
                               Foreground="White"
                               FontSize="20"
                               Height="238"/>
                        <Border BorderBrush="Black"
                            BorderThickness="0, 2, 0, 0"/>
                        <TextBlock Text="14:00"
                           TextAlignment="Center"
                               Foreground="White"
                               FontSize="20"
                               Height="238"/>
                        <Border BorderBrush="Black"
                            BorderThickness="0, 2, 0, 0"/>
                        <TextBlock Text="15:00"
                           TextAlignment="Center"
                               Foreground="White"
                               FontSize="20"
                               Height="238"/>
                        <Border BorderBrush="Black"
                            BorderThickness="0, 2, 0, 0"/>
                        <TextBlock Text="16:00"
                           TextAlignment="Center"
                               Foreground="White"
                               FontSize="20"
                               Height="238"/>
                        <Border BorderBrush="Black"
                            BorderThickness="0, 2, 0, 0"/>
                        <TextBlock Text="17:00"
                           TextAlignment="Center"
                               Foreground="White"
                               FontSize="20"
                               Height="238"/>
                        <Border BorderBrush="Black"
                            BorderThickness="0, 2, 0, 0"/>
                        <TextBlock Text="18:00"
                           TextAlignment="Center"
                               Foreground="White"
                               FontSize="20"
                               Height="238"/>
                        <Border BorderBrush="Black"
                            BorderThickness="0, 2, 0, 0"/>
                        <TextBlock Text="19:00"
                           TextAlignment="Center"
                               Foreground="White"
                               FontSize="20"
                               Height="238"/>
                        <Border BorderBrush="Black"
                            BorderThickness="0, 2, 0, 0"/>
                        <TextBlock Text="20:00"
                           TextAlignment="Center"
                               Foreground="White"
                               FontSize="20"
                               Height="238"/>
                        <Border BorderBrush="Black"
                            BorderThickness="0, 2, 0, 0"/>
                        <TextBlock Text="21:00"
                           TextAlignment="Center"
                               Foreground="White"
                               FontSize="20"
                               Height="238"/>
                        <Border BorderBrush="Black"
                            BorderThickness="0, 2, 0, 0"/>
                        <TextBlock Text="22:00"
                           TextAlignment="Center"
                               Foreground="White"
                               FontSize="20"
                               Height="238"/>
                        <Border BorderBrush="Black"
                            BorderThickness="0, 2, 0, 0"/>
                        <TextBlock Text="23:00"
                           TextAlignment="Center"
                               Foreground="White"
                               FontSize="20"
                               Height="238"/>
                        <Border BorderBrush="Black"
                            BorderThickness="0, 2, 0, 0"/>
                    </StackPanel>
                    <Border Grid.Column="0"
                BorderBrush="Black"
                BorderThickness="0, 0, 1, 0"/>
                    <DockPanel x:Name="MondayDockPanel"
                    Grid.Column="1">
                        <StackPanel x:Name="MondayStackPanel"
                                DockPanel.Dock="Top">
                        </StackPanel>
                    </DockPanel>
                    <Border Grid.Column="1"
                BorderBrush="Black"
                BorderThickness="1, 0, 1, 0"/>
                    <DockPanel x:Name="TuesdayDockPanel"
                    Grid.Column="2">
                        <StackPanel x:Name="TuesdayStackPanel"
                                DockPanel.Dock="Top">
                        </StackPanel>
                    </DockPanel>
                    <Border Grid.Column="2"
                BorderBrush="Black"
                BorderThickness="1, 0, 1, 0"/>
                    <DockPanel x:Name="WednesdayDockPanel"
                    Grid.Column="3">
                        <StackPanel x:Name="WednesdayStackPanel"
                                DockPanel.Dock="Top">
                        </StackPanel>
                    </DockPanel>
                    <Border Grid.Column="3"
                BorderBrush="Black"
                BorderThickness="1, 0, 1, 0"/>
                    <DockPanel x:Name="ThursdayDockPanel"
                    Grid.Column="4">
                        <StackPanel x:Name="ThursdayStackPanel"
                                DockPanel.Dock="Top">
                        </StackPanel>
                    </DockPanel>
                    <Border Grid.Column="4"
                BorderBrush="Black"
                BorderThickness="1, 0, 1, 0"/>
                    <DockPanel x:Name="FridayDockPanel"
                    Grid.Column="5">
                        <StackPanel x:Name="FridayStackPanel"
                                DockPanel.Dock="Top">
                        </StackPanel>
                    </DockPanel>
                    <Border Grid.Column="5"
                BorderBrush="Black"
                BorderThickness="1, 0, 1, 0"/>
                    <DockPanel x:Name="SaturdayDockPanel"
                    Grid.Column="6">
                        <StackPanel x:Name="SaturdayStackPanel"
                                DockPanel.Dock="Top">
                        </StackPanel>
                    </DockPanel>
                    <Border Grid.Column="6"
                BorderBrush="Black"
                BorderThickness="1, 0, 1, 0"/>
                    <DockPanel x:Name="SundayDockPanel"
                    Grid.Column="7">
                        <StackPanel x:Name="SundayStackPanel"
                                DockPanel.Dock="Top">
                        </StackPanel>
                    </DockPanel>
                    <Border Grid.Column="7"
                BorderBrush="Black"
                BorderThickness="1, 0, 2, 0"/>
                </Grid>
            </ScrollViewer>
        </DockPanel>
        <Grid Name="NewPeriodPopUp"
              Visibility="Hidden"
                   Background="Transparent">
            <DockPanel Background="Black"
                       Opacity="0.8">
            </DockPanel>
            <StackPanel Background="#333333"
                        Margin="0, -100, 0, 0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <Button x:Name="NewAppointmentButton"
                        Content="New appointment"
                        Click="NewAppointmentButton_Click"
                        Style="{StaticResource BlackDodgerButton}"
                        Height="40"
                        Width="250"
                        Margin="50, 50, 50, 0"/>
                <Button x:Name="NewOperationButton"
                        Content="New operation"
                        Click="NewOperationButton_Click"
                        Height="40"
                        Width="250"
                        Style="{StaticResource BlackDodgerButton}"
                        Margin="0, 25, 0, 0"/>
                <Button x:Name="CancelButton"
                        Content="Cancel"
                        Style="{StaticResource DodgerButton}"
                        Click="CancelButton_Click"
                        Height="40"
                        Width="200"
                        Margin="0, 25, 0, 50"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
