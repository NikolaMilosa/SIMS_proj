<Window x:Class="ZdravoHospital.GUI.ManagerUI.FilterDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZdravoHospital.GUI.ManagerUI"
        xmlns:validation="clr-namespace:ZdravoHospital.GUI.ManagerUI.ValidationRules"
        mc:Ignorable="d"
        Title="Filtering" 
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        >
    <Grid Width="400" Height="440" Background="Beige">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>   
        
        <!-- Error adorners -->
        <AdornerDecorator Grid.Row="0" Grid.ColumnSpan="2" Margin="10,10,10,5">
            <TextBlock Text="{Binding ElementName=QuantityTextBox, Path=(Validation.Errors).CurrentItem.ErrorContent}" TextAlignment="Center" Foreground="Red" FontSize="18" HorizontalAlignment="Center" TextWrapping="Wrap"/>
        </AdornerDecorator>
        
        <!-- Left side -->
        <Label Grid.Column="0" Grid.Row="1" FontSize="18" Content="Id:" Margin="20,0,0,0"/>

        <Label Grid.Column="0" Grid.Row="2" FontSize="18" Content="Name:" Margin="20,0,0,0"/>

        <Label Grid.Column="0" Grid.Row="3" FontSize="18" Content="Supplier:" Margin="20,0,0,0"/>

        <Label Grid.Column="0" Grid.Row="4" FontSize="18" Content="Max quantity:" Margin="20,0,0,0"/>

        <Label Grid.Column="0" Grid.Row="5" FontSize="18" Content="Type:" Margin="20,0,0,0"/>

        
        <!-- Right side -->

        <TextBox Grid.Column="1" Grid.Row="1" FontSize="18" VerticalContentAlignment="Center" Text="{Binding Id, Mode=TwoWay}" Margin="10,0,0,0" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Width="75"/>

        <TextBox Grid.Column="1" Grid.Row="2" FontSize="18" VerticalContentAlignment="Center" Text="{Binding InventoryName, Mode=TwoWay}" Margin="10,0,0,0" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200"/>

        <TextBox Grid.Column="1" Grid.Row="3" FontSize="18" VerticalContentAlignment="Center" Text="{Binding Supplier, Mode=TwoWay}" Margin="10,0,0,0" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200"/>

        <TextBox x:Name="QuantityTextBox" Grid.Column="1" Grid.Row="4" FontSize="18" VerticalContentAlignment="Center" Margin="10,0,0,0" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Width="75">
            <TextBox.Text>
                <Binding Path="Quantity" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <validation:FilteringQuantityValidationRule ValidationStep="RawProposedValue"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="BorderBrush" Value="#FFABADB3"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=QuantityTextBox, Path=(Validation.HasError)}" Value="True">
                            <Setter Property="BorderBrush" Value="Red"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
        </TextBox>

        <ComboBox x:Name="TypeComboBox" Grid.Column="1" Grid.Row="5" FontSize="18" Margin="10,0,0,0" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200" SelectedItem="{Binding Type, Mode=TwoWay}" PreviewKeyDown="TypeComboBox_PreviewKeyDown">
            <ComboBoxItem>BOTH</ComboBoxItem>
            <ComboBoxItem>STATIC</ComboBoxItem>
            <ComboBoxItem>DYNAMIC</ComboBoxItem>
        </ComboBox>

        
        <!-- Buttons -->

        <Grid Grid.Row="7" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button x:Name="ConfirmButton" Grid.Column="0" Width="105" Height="52" Background="#bec4c2" FontSize="18" Content="Apply" Margin="10,0,10,10" Click="ConfirmButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="IsEnabled" Value="True" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ElementName=QuantityTextBox, Path=(Validation.HasError)}" Value="True">
                                <Setter Property="IsEnabled" Value="False"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button x:Name="CancelButton" Grid.Column="1" Background="beige" Width="105" Height="52" FontSize="18" Content="Cancel" Margin="10,0,10,10" Click="CancelButton_Click"/>

        </Grid>

    </Grid>
</Window>
