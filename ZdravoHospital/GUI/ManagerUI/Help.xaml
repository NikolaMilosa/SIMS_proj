<Window x:Class="ZdravoHospital.GUI.ManagerUI.Help"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZdravoHospital.GUI.ManagerUI"
        mc:Ignorable="d"
        Title="Help"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight">
    <Grid Width="800" Height="600" Background="Beige">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <Grid Grid.RowSpan="2" Background="#bec4c2">
            <!-- menu for help -->
        </Grid>

        <Button Grid.Row="1" Grid.Column="1" x:Name="FinishButton" Background="#bec4c2" FontSize="18" 
                Content="Finish" Height="52" Width="105" Margin="0,0,30,0" HorizontalAlignment="Right"/>
    </Grid>
</Window>
