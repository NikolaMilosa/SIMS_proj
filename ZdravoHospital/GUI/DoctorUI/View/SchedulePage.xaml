<Page x:Class="ZdravoHospital.GUI.DoctorUI.SchedulePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZdravoHospital.GUI.DoctorUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="1920"
      Title="SchedulePage"
      SizeChanged="PageSizeChanged">

    <Grid>
        <Grid Background="#222222">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <WrapPanel Grid.Row="0"
                       Width="{Binding ActualWidth}"
                       Background="Black">
                <WrapPanel Margin="{Binding DoctorWrapPanelMargin}"
                           Name="DoctorWrapPanel"
                           Width="630">
                    <TextBlock Grid.Column="0"
                       Text="Select doctor:"
                       FontSize="25"
                               Width="180"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
                    <ComboBox Name="DoctorsComboBox"
                              Grid.Column="1"
                              Style="{StaticResource DarkComboBox}"
                              FontSize="23"
                              Width="450"
                              VerticalAlignment="Center"
                              VerticalContentAlignment="Center"
                              SelectionChanged="DoctorsComboBox_SelectionChanged">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} {1} ({2})">
                                            <Binding Path="Name"/>
                                            <Binding Path="Surname"/>
                                            <Binding Path="SpecialistType.SpecializationName"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </WrapPanel>
                <StackPanel  Margin="{Binding WeekWrapPanelMargin}"
                           Width="{Binding WeekWrapPanelWidth}">
                    <WrapPanel HorizontalAlignment="Right">
                        <TextBlock Grid.Column="0"
                       Text="Select week:"
                               Width="160"
                                   Height="37"
                       FontSize="25"
                       Foreground="White"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal"
                       HorizontalAlignment="Right"
                                Width="350">
                            <Button Grid.Column="1"
                        Name="PreviousWeekButton"
                        Click="PreviousWeekButton_Click"
                      FontSize="20"
                        FontWeight="Bold"
                            Style="{StaticResource BlueButton}"
                            Width="30"
                      Height="30"
                        Content="&lt;"/>
                            <TextBlock Grid.Column="2"
                           FontSize="25"
                           Foreground="White"
                           VerticalAlignment="Center"
                                       Width="290"
                                       TextAlignment="Center">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0:dd.MM.yyyy.} - {1:dd.MM.yyyy.}">
                                        <Binding Path="DaysDates[0]"/>
                                        <Binding Path="DaysDates[6]"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                            <Button Grid.Column="3"
                        Name="NextWeekButton"
                        Click="NextWeekButton_Click"
                      FontSize="20"
                            Style="{StaticResource BlueButton}"
                            Width="30"
                        FontWeight="Bold"
                      Height="30"
                        Content="&gt;"/>
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>
            </WrapPanel>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="45"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="55"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="17"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0"
                    BorderBrush="Black"
                    BorderThickness="0, 2, 1, 2"/>
                <TextBlock Grid.Column="1"
                       TextAlignment="Center"
                       Foreground="White"
                       FontSize="20"
                       VerticalAlignment="Center">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="Monday [{0:dd.MM.}]">
                            <Binding Path="DaysDates[0]"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
                <Border Grid.Column="1"
                    BorderBrush="Black"
                    BorderThickness="1, 2, 1, 2"/>
                <TextBlock Grid.Column="2"
                       TextAlignment="Center"
                       Foreground="White"
                       FontSize="20"
                       VerticalAlignment="Center">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="Tuesday [{0:dd.MM.}]">
                            <Binding Path="DaysDates[1]"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
                <Border Grid.Column="2"
                    BorderBrush="Black"
                    BorderThickness="1, 2, 1, 2"/>
                <TextBlock Grid.Column="3"
                       TextAlignment="Center"
                       Foreground="White"
                       FontSize="20"
                       VerticalAlignment="Center">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="Wednesday [{0:dd.MM.}]">
                            <Binding Path="DaysDates[2]"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
                <Border Grid.Column="3"
                    BorderBrush="Black"
                    BorderThickness="1, 2, 1, 2"/>
                <TextBlock Grid.Column="4"
                       TextAlignment="Center"
                       Foreground="White"
                       FontSize="20"
                       VerticalAlignment="Center">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="Thursday [{0:dd.MM.}]">
                            <Binding Path="DaysDates[3]"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
                <Border Grid.Column="4"
                    BorderBrush="Black"
                    BorderThickness="1, 2, 1, 2"/>
                <TextBlock Grid.Column="5"
                       TextAlignment="Center"
                       Foreground="White"
                       FontSize="20"
                       VerticalAlignment="Center">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="Friday [{0:dd.MM.}]">
                            <Binding Path="DaysDates[4]"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
                <Border Grid.Column="5"
                    BorderBrush="Black"
                    BorderThickness="1, 2, 1, 2"/>
                <TextBlock Grid.Column="6"
                       TextAlignment="Center"
                       Foreground="White"
                       FontSize="20"
                       VerticalAlignment="Center">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="Saturday [{0:dd.MM.}]">
                            <Binding Path="DaysDates[5]"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
                <Border Grid.Column="6"
                    BorderBrush="Black"
                    BorderThickness="1, 2, 1, 2"/>
                <TextBlock Grid.Column="7"
                       TextAlignment="Center"
                       Foreground="White"
                       FontSize="20"
                       VerticalAlignment="Center">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="Sunday [{0:dd.MM.}]">
                            <Binding Path="DaysDates[6]"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
                <Border Grid.Column="7"
                    BorderBrush="Black"
                    BorderThickness="1, 2, 2, 2"/>
                <Border Grid.Column="8"
                    BorderBrush="Black"
                    BorderThickness="0, 2, 0, 2"/>
            </Grid>
            <ScrollViewer x:Name="CalendarScrollViewer"
                          Grid.Row="2"
                      DockPanel.Dock="Bottom">
                <Grid x:Name="DaysGrid"
              Height="5760">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="55"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="00:00"
                               TextAlignment="Center"
                               Foreground="White"
                               FontSize="20"
                               Height="238"/>
                        <Border BorderBrush="Black"
                            BorderThickness="0, 2, 0, 0"/>
                        <TextBlock Text="01:00"
                           TextAlignment="Center"
                               Foreground="White"
                               FontSize="20"
                               Height="238"/>
                        <Border BorderBrush="Black"
                            BorderThickness="0, 2, 0, 0"/>
                        <TextBlock Text="02:00"
                           TextAlignment="Center"
                               Foreground="White"
                               FontSize="20"
                               Height="238"/>
                        <Border BorderBrush="Black"
                            BorderThickness="0, 2, 0, 0"/>
                        <TextBlock Text="03:00"
                           TextAlignment="Center"
                               Foreground="White"
                               FontSize="20"
                               Height="238"/>
                        <Border BorderBrush="Black"
                            BorderThickness="0, 2, 0, 0"/>
