<Page x:Class="ZdravoHospital.GUI.Secretary.SecretaryHomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZdravoHospital.GUI.Secretary"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="430"
      Title="SecretaryHomePage"
      Background="Beige">

    <Grid>
        <DockPanel>
            <ToolBar DockPanel.Dock="Top" Background="#FF00152C" Height="40">
                <Button Name="AddPatientButton" Background="White" Width="50" Height="30" FontFamily="Arial Black" Click="AddPatientButton_Click" Margin="5">add
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="18"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Separator/>
                <Button Name="SeePatientsButton" Background="White" Width="50" Height="30" FontFamily="Arial Black"  Margin="5" Click="SeePatientsButton_Click">view
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="18"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Separator/>
                <Button Name="AddGuestButton" Background="White" Width="55" Height="30" FontFamily="Arial Black"  Margin="5" Click="AddGuestButton_Click">guest
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="18"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </ToolBar>
            <Grid DockPanel.Dock="Left">

            </Grid>
        </DockPanel>
    </Grid>
</Page>
