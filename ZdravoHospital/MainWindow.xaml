<Window x:Class="ZdravoHospital.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZdravoHospital"
        mc:Ignorable="d"
        Title="ZdravoHospital - Login" Height="450" Width="616">
    <Grid Background="Beige">
        <Label Content="Username :" HorizontalAlignment="Left" Height="30" Margin="109,170,0,0" VerticalAlignment="Top" Width="133"/>
        <Label Content="Password :" HorizontalAlignment="Left" Height="30" Margin="109,224,0,0" VerticalAlignment="Top" Width="133"/>
        <TextBox x:Name="UsernameTextBox" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="30" Margin="250,170,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="133"/>
        <PasswordBox x:Name="PasswordTextBox" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="30" Margin="250,224,0,0" VerticalAlignment="Top" Width="133"/>
        <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Left" Margin="293,292,0,0" VerticalAlignment="Top" Height="30" Width="90" Click="LoginButton_Click"/>

    </Grid>
</Window>
