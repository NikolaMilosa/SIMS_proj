<Window x:Class="ZdravoHospital.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZdravoHospital"
        mc:Ignorable="d"
        Title="ZdravoHospital" Height="450" Width="800"
        ResizeMode="NoResize">
    <Grid Background="#0AD488">
        <Label x:Name="usernameLabel" Content="Username:" HorizontalAlignment="Left" Height="28" Margin="238,126,0,0" VerticalAlignment="Top" Width="78"/>
        <Label x:Name="passwordLabel" Content="Password:" HorizontalAlignment="Left" Height="28" Margin="238,187,0,0" VerticalAlignment="Top" Width="78"/>
        <TextBox x:Name="usernameTextBox" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="28" Margin="361,126,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="144" FontSize="14"/>
        <PasswordBox x:Name="passwordTextBox" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="28" Margin="361,187,0,0" VerticalAlignment="Top" Width="144" FontSize="14"/>
        <Button x:Name="loginButton" Content="Login" HorizontalAlignment="Left" Height="25" Margin="431,266,0,0" VerticalAlignment="Top" Width="74" Click="loginButton_Click"/>

    </Grid>
</Window>
